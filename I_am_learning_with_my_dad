VIDEO: 62

PYGAME MAKING RECTANGLE
import pygame
pygame.init()

r=pygame.display.set_mode((800,450))
pygame.display.set_caption("My first game")
x=50
y=50
width=30
height=20
vel=5

run=True
while run:
    pygame.time.delay (100)
    for event in pygame.event.get():
        if event.type==pygame.QUIT:
            run=False
    pygame.draw.rect(r,(0,255,0),(x,y,width,height))
    pygame.display.update()
pygame.quit()

    




VIDEO: 63

MOVING OBJECT USING NAVIGATION KEY

import pygame
pygame.init()

r=pygame.display.set_mode((800,450))
pygame.display.set_caption("My first game")
x=50
y=50
width=30
height=20
vel=5

run=True
while run:
    pygame.time.delay (100)
    for event in pygame.event.get():
        if event.type==pygame.QUIT:
            run=False
    keys= pygame.key.get_pressed()
    if keys[pygame.K_LEFT]:
        x -=vel
    if keys[pygame.K_RIGHT]:
        x += vel

    if keys[pygame.K_UP]:
        y -=vel
    if keys[pygame.K_DOWN]:
        y +=vel
    r.fill((110,10,10))
    pygame.draw.rect(r,(0,255,0),(x,y,width,height))
    pygame.display.update()
pygame.quit()




VIDEO: 64

RESTRICTING BOUNDRY

import pygame
pygame.init()

r=pygame.display.set_mode((800,450))
pygame.display.set_caption("My first game")
x=50
y=50
width=30
height=20
vel=10

run=True
while run:
    pygame.time.delay (100)
    for event in pygame.event.get():
        if event.type==pygame.QUIT:
            run=False
    keys= pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and x > vel:
        x -=vel
    if keys[pygame.K_RIGHT] and x < 800-width-vel:
        x += vel

    if keys[pygame.K_UP] and y > vel:
        y -=vel
    if keys[pygame.K_DOWN] and y < 450-height-vel:
        y +=vel
    r.fill((110,10,10))
    pygame.draw.rect(r,(0,255,0),(x,y,width,height))
    pygame.display.update()
pygame.quit()



VIDEO: 65

JUMPING CHARACTER

import pygame
pygame.init()

r=pygame.display.set_mode((800,450))
pygame.display.set_caption("My first game")
x=50
y=50
width=30
height=20
vel=10

jump=False
jump_count=10

run=True
while run:
    pygame.time.delay (100)
    for event in pygame.event.get():
        if event.type==pygame.QUIT:
            run=False
    keys= pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and x > vel:
        x -=vel
    if keys[pygame.K_RIGHT] and x < 800-width-vel:
        x += vel
    if not(jump):
        
        if keys[pygame.K_UP] and y > vel:
            y -=vel
        if keys[pygame.K_DOWN] and y < 450-height-vel:
            y +=vel
        if keys[pygame.K_SPACE]:
            jump=True
    else:
        if jump_count>= -10:
            negative=1
            if jump_count<0:
                negative=-1
            y-=(jump_count**2) *0.5 *negative
            jump_count-=1

        else:
            jump=False
            jump_count-10

        
    r.fill((110,10,10))
    pygame.draw.rect(r,(0,255,0),(x,y,width,height))
    pygame.display.update()
pygame.quit()



VIDEO: 66

CHANGING BACKGROUND IMAGE

import pygame
pygame.init()

r=pygame.display.set_mode((600,450))
pygame.display.set_caption("My first game")
x=20
y=380
width=30
height=20
vel=10

jump=False
jump_count=10

run=True
background_image=pygame.image.load(*"photo.jpeg").convert()

while run:
    pygame.time.delay (100)
    for event in pygame.event.get():
        if event.type==pygame.QUIT:
            run=False
    keys= pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and x > vel:
        x -=vel
    if keys[pygame.K_RIGHT] and x < 600-width-vel:
        x += vel
    if not(jump):
        
        if keys[pygame.K_UP] and y > vel:
            y -=vel
        if keys[pygame.K_DOWN] and y < 450-height-vel:
            y +=vel
        if keys[pygame.K_SPACE]:
            jump=True
    else:
        if jump_count>= -10:
            negative=1
            if jump_count<0:
                negative=-1
            y-=(jump_count**2) *0.5 *negative
            jump_count-=1

        else:
            jump=False
            jump_count-10

        
    r.blit(background_image,[0,0])
    pygame.draw.rect(r,(0,255,0),(x,y,width,height))
    pygame.display.update()
pygame.quit()



